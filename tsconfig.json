{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "**/*"
  ]
}
